{
  "manifest_version": 2,
  "name": "Clicktime Extension",
  "version": "0.1",

  "content_scripts" : [
  	{
  		"matches" : [
  			"<all_urls>"
  		],
  		"js" : ["js/jquery-1.11.3.min.js", "js/content.js"]
  	}
  ],

  "browser_action" : {
  	"default_icon" : "img/stopwatch.png",
    "default_title" : "ClickTime",
    "default_popup" : "html/popup.html"
  },

  "background" : {
  	"scripts" : ["js/background.js"]
  }
}